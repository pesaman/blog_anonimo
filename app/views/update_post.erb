<h1>Bienvenido a Post Anonimo !</h1>
<form action="/update_form/<%= @edit_post.id %>" method="post">
  <h3>Title</h3>
  <input type="text" name="title" value="<%= @edit_post.title %> ">
  <h3>Body</h3>
  <input type="text" name="body" value="<%= @edit_post.body %> ">
  <h3>Tags</h3>
  <% @edit_tags.each do |tag|%>
    <input type="text" name="tags[<%= tag.name %>]" value="<%=tag.name%>">
  <%end%>
  <br><br>
  <input type="submit">
</form>



